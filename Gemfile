source 'https://rubygems.org'

# Shim to load environment variables from .env into ENV in development.
gem 'dotenv', '~> 2.7'

# A tiny(2kb) library used to format dates with `*** time ago`.
gem 'rails-assets-timeago.js', '~> 3.0', source: 'https://rails-assets.org'

# DSL for quickly creating web apps in Ruby with minimal effort
gem 'sinatra', '~> 2.0'

# Asset (CSS and JS) handler
gem 'sprockets', '~> 3.7'
