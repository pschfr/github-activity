source 'https://rubygems.org'

# Shim to load environment variables from .env into ENV in development.
gem 'dotenv', '~> 2.7'

# CSS preprocessor
gem 'sass', '~> 3.7'

# DSL for quickly creating web apps in Ruby with minimal effort
gem 'sinatra', '~> 2.0'

# Asset (CSS and JS) handler
gem 'sprockets', '~> 3.7'

# Gems from rails-assets.org
source 'https://rails-assets.org' do
  # CSS library that powers GitHub
  gem 'rails-assets-primer-css', '~> 12.2'

  # A tiny(2kb) library used to format dates with `*** time ago`.
  gem 'rails-assets-timeago.js', '~> 3.0'
end
